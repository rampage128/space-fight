<object>
    <type>capital</type>
    <model>destroyer.j3o</model>
    <controls>
        <damage>
            <hull_hp>240000</hull_hp>
            <deatheffect>explosion</deatheffect>
            <effects>
                <weapon>
                    <file>hullhit</file>
                </weapon>
            </effects>
        </damage>
        <shield>
            <strength>320000</strength>
            <regeneration>300</regeneration>
            <hiteffect>shieldblast</hiteffect>
        </shield>
        <sensor>
            <maxrange>15000</maxrange>
        </sensor>
        <flight>
            <hascruise>false</hascruise>
            <topspeed>30</topspeed>
            <lineardamp>2.5</lineardamp>
            <angulardamp>1</angulardamp>
            <momentum>0.125</momentum>
            <acceleration>5.0</acceleration>
            <turnrate>0.25</turnrate>
            <topspeedreverse>10</topspeedreverse>
            <engines>
                <engine>
                    <node>engine1</node>
                    <width>3</width>
                    <model>engine-destroyer.j3o</model>
                    <!--<position>[-3.0, 1.25, -3.5]</position>-->
                    <material>effects/trail.j3m</material>
                    <sound>
                        <file>engine.ogg</file>
                        <volume>2</volume>
                        <maxdistance>1200</maxdistance>
                        <refdistance>400</refdistance>
                    </sound>
                </engine>
            </engines>
        </flight>
        <physics>
            <mass>800000</mass>
        </physics>
        <turrets>
            <turret>
                <type>laserturret</type>
            </turret>
        </turrets>
        <bays>
            <startbay>
                <position>[0, 0, 750]</position>
                <angle>[0, 0, 0]</angle>
            </startbay>
        </bays>
        <ai>   
        </ai>
    </controls>
</object>
